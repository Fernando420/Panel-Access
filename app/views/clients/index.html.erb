<div class="row">
    <table class="table table-striped">
        <thead>
            <th>Name</th>
            <th>Last Name</th>
            <th>Member Id</th>
            <th>Email</th>
            <th>Created</th>
            <th>Edit</th>
            <th>Show</th>
        </thead>
        <tbody>
            <% @clients.each do |client| %>
                <tr>
                    <td><%= client['name'] %></td>
                    <td><%= client['last_name'] %></td>
                    <td><%= client['member_id'] %></td>
                    <td><%= client['email'] %></td>
                    <td><%= DateTime.parse(client['created_at']).strftime("%Y-%m-%d") %></td>
                    <td><a href="/clients/<%= client['id'] %>/edit">Edit</a></td>
                    <td><a href="/clients/<%= client['id'] %>">Show</a></td>
                </tr>
            <%end%>
        </tbody>
    </table>
</div>